@model ErrorViewModel
@{
    ViewData["Title"] = "Yetkisiz giriş";
    Layout = "_LayoutPopup";
}
<div class="h-alt-hf d-flex flex-column align-items-center justify-content-center text-center">
    <div class="alert alert-danger bg-white pt-4 pr-5 pb-3 pl-5" id="demo-alert">
        <h1 class="fs-xxl fw-700 color-fusion-500 d-flex align-items-center justify-content-center m-0">
            <fa icon="lock" class="color-danger-700"></fa>
            <span class="color-danger-700"> @ViewBag.Title</span>
        </h1>
        <h3 class="fw-500 mb-0 mt-3" localize="try">
            Uygulamaya erişim yetkiniz yoktur, lütfen <a asp-controller="Account" asp-action="LogOut" asp-route-refresh="true">Yeniden Giriş </a> yapmayı deneyin.
        </h3>
    </div>
</div> 