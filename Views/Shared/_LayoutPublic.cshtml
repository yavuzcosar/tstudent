@{
    var lOptions = LayoutOptions.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_Head" />
    @RenderSection("Header", required: false)
</head>
<body class="mod-bg-1">
    <partial name="../Scripts/LoadingSaving" />
    <div class="page-wrapper">
        <div class="page-inner">
            <div class="page-content-wrapper">
                <main id="js-page-content" role="main" class="page-content">
                    <div class="page-logo">
                        <a href="/" class="page-logo-link press-scale-down d-flex align-items-center"
                           data-toggle="modal" data-target="#modal-shortcut">
                            <img data-html="@(Client.Value.CdnUrl)/tapps/img/logo.png" class="img-long"
                                 src="@Theme.Value.LogoUrl.StorageFix(Storage.Value)"
                                 alt="@Company.Value.CompanyName" aria-roledescription="logo" />
                        </a>
                    </div>
                    @RenderSection("PageHeading", required: false)
                    @RenderBody()
                </main>
                <partial name="../Page/ContentOverlay" />
                @if (lOptions.Footer)
                {
                    <partial name="../Page/Footer" />
                }
            </div>
        </div>
    </div>
    <partial name="../Scripts/BasePlugins" />
    @RenderSection("Scripts", required: false)
</body>
</html>