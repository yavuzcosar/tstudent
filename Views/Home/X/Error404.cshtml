@model ErrorViewModel
@{
    ViewData["Title"] = "Sayfa bulunamadı !";
    if (!User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutPublic";
    }
}
<div class="h-alt-hf d-flex flex-column align-items-center justify-content-center text-center">
    <h3 class="page-error color-fusion-500" style="font-size: 300% !important;">
        Sayfa Bulunamadı <span class="text-gradient">404</span><small class="fw-500">
            Aradığınız sayfa bulunamadı, bir hata olduğunu düşünüyorsanız, lütfen Yönetici ile iletişime geçin.
        </small>
    </h3>
</div>